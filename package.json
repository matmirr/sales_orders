{
    "name": "sales_orders",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@graphql-tools/schema": "^8.3.1",
        "@sap/cds": "^5",
        "express": "^4",
        "hdb": "^0.18.3",
        "@sap/cds-odata-v2-adapter-proxy": "^1.8.4",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express-graphql": "^0.12.0",
        "graphql": "^16.2.0"
    },
    "devDependencies": {
        "@sap/eslint-plugin-ui5-jsdocs": "^2.0.5",
        "@sap/ux-specification": "^1.100.4",
        "@sapui5/ts-types": "^1.92.2",
        "cds-swagger-ui-express": "^0.3.0",
        "eslint": "^7.32.0",
        "sqlite3": "^5.0.2"
    },
    "scripts": {
        "start": "cds run",
        "watch-orders": "cds watch --open orders/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy sales_orders --delete-services --delete-service-keys"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "requires": {
            "db": {
                "kind": "sql"
            }
        },
        "hana": {
            "deploy-format": "hdbtable"
        }
    },
    "sapux": [
        "app/orders"
    ]
}